<a id="my-button">Popover</a>

...

<div id="my-popover">
  <div class="header">
    ...
  </div>
  <div class="content">
    ...
  </div>
</div>


...

var myPopover = new Popover({header: '#my-popover > .header',
    content: '#my-popover > .content'});
$("#my-popover").bind("click", function(){myPopover.showPopover($("#my-button"));});

